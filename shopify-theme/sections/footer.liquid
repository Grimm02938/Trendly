{% comment %}
  Footer Section
{% endcomment %}

<footer class="footer bg-gray-800 dark-mode:bg-gray-900 py-12 border-t border-gray-700 dark-mode:border-gray-600 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {% comment %} Main Footer Content {% endcomment %}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      
      {% comment %} Brand Column {% endcomment %}
      <div class="md:col-span-1">
        <div class="mb-4">
          <h3 class="text-3xl font-black bg-gradient-to-r from-rose-500 to-pink-400 bg-clip-text text-transparent trendly-logo tracking-tighter">
            {{ settings.site_title | default: shop.name | default: 'Trendly' }}
          </h3>
        </div>
        <p class="text-gray-400 trendly-font text-sm leading-relaxed mb-4">
          {{ section.settings.footer_description | default: settings.site_description | default: 'Your one-stop shop for trending products worldwide' }}
        </p>
        
        {% comment %} Social Media Links {% endcomment %}
        {% if section.settings.show_social_links %}
          <div class="flex space-x-4">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="text-gray-400 hover:text-rose-500 transition-colors" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="text-gray-400 hover:text-rose-500 transition-colors" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.352-1.055-2.352-2.352 0-1.297 1.055-2.352 2.352-2.352 1.297 0 2.352 1.055 2.352 2.352 0 1.297-1.055 2.352-2.352 2.352zm7.718 0c-1.297 0-2.352-1.055-2.352-2.352 0-1.297 1.055-2.352 2.352-2.352 1.297 0 2.352 1.055 2.352 2.352 0 1.297-1.055 2.352-2.352 2.352z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_twitter_link != blank %}
              <a href="{{ settings.social_twitter_link }}" class="text-gray-400 hover:text-rose-500 transition-colors" aria-label="Twitter">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_youtube_link != blank %}
              <a href="{{ settings.social_youtube_link }}" class="text-gray-400 hover:text-rose-500 transition-colors" aria-label="YouTube">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_tiktok_link != blank %}
              <a href="{{ settings.social_tiktok_link }}" class="text-gray-400 hover:text-rose-500 transition-colors" aria-label="TikTok">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
      
      {% comment %} Quick Links {% endcomment %}
      <div class="md:col-span-1">
        <h4 class="text-white font-bold text-lg mb-4 trendly-font">
          {{ 'layout.footer.quick_links' | t | default: 'Quick Links' }}
        </h4>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
          
          {% comment %} Default links if no footer menu exists {% endcomment %}
          {% if linklists.footer.links.size == 0 %}
            <li><a href="{{ routes.search_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'general.search.title' | t | default: 'Search' }}</a></li>
            <li><a href="{{ routes.collections_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'collections.general.title' | t | default: 'Collections' }}</a></li>
            <li><a href="/pages/about" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'layout.footer.about' | t | default: 'About Us' }}</a></li>
            <li><a href="/pages/contact" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'templates.contact.form.title' | t | default: 'Contact' }}</a></li>
          {% endif %}
        </ul>
      </div>
      
      {% comment %} Customer Service {% endcomment %}
      <div class="md:col-span-1">
        <h4 class="text-white font-bold text-lg mb-4 trendly-font">
          {{ 'layout.footer.customer_service' | t | default: 'Customer Service' }}
        </h4>
        <ul class="space-y-2">
          {% if customer %}
            <li><a href="{{ routes.account_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'customer.account.title' | t | default: 'My Account' }}</a></li>
            <li><a href="{{ routes.account_addresses_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'customer.addresses.title' | t | default: 'Addresses' }}</a></li>
            <li><a href="{{ routes.account_logout_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'customer.log_out' | t | default: 'Log Out' }}</a></li>
          {% else %}
            <li><a href="{{ routes.account_login_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'customer.login_page.title' | t | default: 'Login' }}</a></li>
            <li><a href="{{ routes.account_register_url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'customer.register.title' | t | default: 'Create Account' }}</a></li>
          {% endif %}
          <li><a href="/pages/shipping-returns" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'layout.footer.shipping_returns' | t | default: 'Shipping & Returns' }}</a></li>
          <li><a href="/pages/size-guide" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'layout.footer.size_guide' | t | default: 'Size Guide' }}</a></li>
          <li><a href="/pages/faq" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">{{ 'layout.footer.faq' | t | default: 'FAQ' }}</a></li>
        </ul>
      </div>
      
      {% comment %} Newsletter Signup {% endcomment %}
      <div class="md:col-span-1">
        <h4 class="text-white font-bold text-lg mb-4 trendly-font">
          {{ 'layout.footer.newsletter' | t | default: 'Stay Updated' }}
        </h4>
        <p class="text-gray-400 text-sm mb-4 trendly-font">
          {{ 'layout.footer.newsletter_text' | t | default: 'Subscribe to get special offers, free giveaways, and updates on trending products.' }}
        </p>
        
        {% comment %} Newsletter Form (you can integrate with Shopify's customer forms or email marketing apps) {% endcomment %}
        <form action="#" method="post" class="newsletter-form">
          <div class="flex">
            <input 
              type="email" 
              name="email" 
              placeholder="{{ 'layout.footer.newsletter_email' | t | default: 'Enter your email' }}"
              class="flex-1 px-4 py-2 bg-gray-700 text-white placeholder-gray-400 border border-gray-600 rounded-l-lg focus:ring-2 focus:ring-rose-500 focus:border-transparent trendly-font text-sm"
              required
            />
            <button 
              type="submit"
              class="px-4 py-2 bg-gradient-to-r from-rose-500 to-pink-400 text-white rounded-r-lg hover:from-rose-600 hover:to-pink-500 transition-all trendly-font text-sm font-medium"
            >
              {{ 'layout.footer.newsletter_submit' | t | default: 'Subscribe' }}
            </button>
          </div>
        </form>
      </div>
    </div>
    
    {% comment %} Footer Bottom {% endcomment %}
    <div class="border-t border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        {% comment %} Copyright {% endcomment %}
        <div class="text-gray-400 text-sm trendly-font">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name | default: 'Trendly' }}. 
          {{ 'layout.footer.copyright' | t | default: 'All rights reserved.' }}
        </div>
        
        {% comment %} Legal Links {% endcomment %}
        <div class="flex flex-wrap justify-center md:justify-end space-x-6">
          {% for link in linklists.footer-legal.links %}
            <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">
              {{ link.title }}
            </a>
          {% endfor %}
          
          {% comment %} Default legal links if no legal menu exists {% endcomment %}
          {% if linklists.footer-legal.links.size == 0 %}
            <a href="/policies/privacy-policy" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">
              {{ 'layout.footer.privacy_policy' | t | default: 'Privacy Policy' }}
            </a>
            <a href="/policies/terms-of-service" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">
              {{ 'layout.footer.terms_of_service' | t | default: 'Terms of Service' }}
            </a>
            <a href="/policies/refund-policy" class="text-gray-400 hover:text-white transition-colors trendly-font text-sm">
              {{ 'layout.footer.refund_policy' | t | default: 'Refund Policy' }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Your one-stop shop for trending products worldwide"
    },
    {
      "type": "checkbox",
      "id": "show_social_links",
      "label": "Show social media links",
      "default": true,
      "info": "Social media links are configured in Theme Settings"
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "settings": {
        "footer_description": "Your one-stop shop for trending products worldwide",
        "show_social_links": true
      }
    }
  ]
}
{% endschema %}